@model BookEditViewModel
@{
    ViewData["Title"] = "Detail " + Model.Title;
}
<div class="row">
    <div class="col-md-12">
        <div>
            <form asp-controller="Book" asp-action="Save" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Title">Titel:</label>
                    <input type="text" asp-for="Title" placeholder="Titel van het boek." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreationDate">Aanmaakdatum:</label>
                    <input type="date" asp-for="CreationDate" />
                    <span asp-validation-for="CreationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ISBN">ISBN:</label>
                    <input type="text" asp-for="ISBN" placeholder="ISBN van het boek." />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre">Genre:</label>
                    <select asp-for="GenreId" asp-items="Model.Genres"></select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author1">Author 1:</label>
                    <select asp-for="AuthorId1" asp-items="Model.Authors"></select>
                    <span asp-validation-for="Author1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author2">Author 1:</label>
                    <select asp-for="AuthorId2" asp-items="Model.Authors"></select>
                    <span asp-validation-for="Author2" class="text-danger"></span>
                </div>
                <input type="submit" />
            </form>
        </div>
    </div>
</div>